# ============================================
# ServiceDesk - Development Environment
# ============================================
# Copy this file to .env.local for local development
# .env.local is gitignored and safe for local secrets

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
PORT=3000

# ============================================
# SECURITY (Development Defaults)
# ============================================
# WARNING: These are development defaults!
# Generate production secrets with: openssl rand -hex 32

JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars
SESSION_SECRET=dev-session-secret-change-in-production-32-chars
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# ============================================
# DATABASE (PostgreSQL Local Development)
# ============================================
DB_TYPE=postgresql
DATABASE_URL=postgresql://servicedesk:dev_password@localhost:5432/servicedesk_dev?sslmode=disable
DB_POOL_MIN=2
DB_POOL_MAX=5

# ============================================
# EMAIL (Development - Console Output)
# ============================================
# Leave SMTP credentials empty to use console logging
EMAIL_PROVIDER=smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM_NAME=ServiceDesk Dev
EMAIL_FROM_ADDRESS=dev@localhost
SKIP_EMAIL_VERIFICATION=true

# ============================================
# AI FEATURES (Optional - Development)
# ============================================
# Add your OpenAI key to test AI features locally
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ENABLE_AI_CLASSIFICATION=false
ENABLE_AI_SENTIMENT_ANALYSIS=false

# ============================================
# REDIS (Optional - Development)
# ============================================
# Not required for development, uses in-memory cache
REDIS_URL=
ENABLE_REDIS_CACHE=false

# ============================================
# MONITORING (Disabled in Development)
# ============================================
# Sentry
SENTRY_DSN=
SENTRY_UPLOAD_SOURCEMAPS=false

# Datadog
DD_TRACE_ENABLED=false
DD_LOGS_ENABLED=false
NEXT_PUBLIC_DD_RUM_ENABLED=false

# ============================================
# DEVELOPMENT FEATURES
# ============================================
DEBUG=true
LOG_LEVEL=debug
LOG_SQL_QUERIES=true
ENABLE_MOCK_DATA=true
SKIP_EMAIL_VERIFICATION=true
BYPASS_RATE_LIMIT=true

# ============================================
# FEATURE FLAGS (All Enabled for Testing)
# ============================================
ENABLE_KNOWLEDGE_BASE=true
ENABLE_ANALYTICS=true
ENABLE_WORKFLOWS=true
ENABLE_GAMIFICATION=true
ENABLE_PWA=true
ENABLE_REALTIME_NOTIFICATIONS=true
ENABLE_MULTI_TENANCY=true
ENABLE_SSO=false

# ============================================
# RATE LIMITING (Relaxed for Development)
# ============================================
ENABLE_RATE_LIMITING=false
RATE_LIMIT_API=1000
RATE_LIMIT_AUTH=100

# ============================================
# CORS (Localhost Only)
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ============================================
# INTEGRATIONS (Optional - Add as Needed)
# ============================================
# Gov.br (Staging)
GOVBR_CLIENT_ID=
GOVBR_CLIENT_SECRET=
GOVBR_ENVIRONMENT=staging

# WhatsApp
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# SSO Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# LOCALIZATION
# ============================================
DEFAULT_LANGUAGE=pt-BR
DEFAULT_TIMEZONE=America/Sao_Paulo
