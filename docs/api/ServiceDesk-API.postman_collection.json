        {
          "name": "Create Ticket (Workflow)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('ticket_id', jsonData.ticket.id);",
                  "    pm.test('Ticket created', function () {",
                  "        pm.expect(jsonData.ticket).to.have.property('id');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Impressora não imprime\",\n  \"description\": \"A impressora HP do 3º andar não está imprimindo. Já tentei reiniciar mas sem sucesso.\",\n  \"ticket_type_id\": 1,\n  \"category_id\": 3,\n  \"priority_id\": 2,\n  \"impact\": 3,\n  \"urgency\": 3,\n  \"affected_users_count\": 5,\n  \"business_service\": \"Impressão\",\n  \"location\": \"Prédio B - 3º andar\",\n  \"source\": \"web\"\n}"
            },
