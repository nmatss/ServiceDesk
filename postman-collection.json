              "raw": "{\n  \"name\": \"New User\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"SecureP@ss123\",\n  \"tenant_slug\": \"{{tenant_slug}}\"\n}"
            },
            "url": {
