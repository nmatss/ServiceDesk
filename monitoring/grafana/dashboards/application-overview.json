{
  "dashboard": {
    "title": "ServiceDesk - Application Overview",
    "tags": ["servicedesk", "overview", "application"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(servicedesk_http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}} ({{status_code}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Error Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "rate(servicedesk_http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors: {{route}}",
            "refId": "A"
          },
          {
            "expr": "rate(servicedesk_http_requests_total{status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors: {{route}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Errors/sec" },
          { "format": "short" }
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": { "params": [10], "type": "gt" },
              "query": { "params": ["A", "5m", "now"] }
            }
          ]
        }
      },
      {
        "id": 3,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(servicedesk_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95: {{route}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(servicedesk_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99: {{route}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "servicedesk_users_active",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "title": "Active Tickets",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
        "targets": [
          {
            "expr": "sum(servicedesk_tickets_active)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 6,
        "title": "Database Query Performance",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(servicedesk_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95: {{operation}} on {{table}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Query Time" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Database Query Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "rate(servicedesk_db_queries_total[5m])",
            "legendFormat": "{{operation}} on {{table}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "qps", "label": "Queries/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "Resident Memory",
            "refId": "A"
          },
          {
            "expr": "nodejs_heap_size_used_bytes",
            "legendFormat": "Heap Used",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Memory" },
          { "format": "short" }
        ]
      },
      {
        "id": 9,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "CPU %" },
          { "format": "short" }
        ]
      }
    ]
  }
}
