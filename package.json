{
  "name": "servicedesk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch server.ts",
    "dev:next": "next dev",
    "build": "next build",
    "start": "tsx server.ts",
    "start:next": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run && playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:integration:watch": "vitest watch tests/integration",
    "test:integration:coverage": "vitest run --coverage tests/integration",
    "test:integration:auth": "vitest run tests/integration/auth.test.ts",
    "test:integration:tickets": "vitest run tests/integration/tickets.test.ts",
    "test:integration:knowledge": "vitest run tests/integration/knowledge.test.ts",
    "test:integration:admin": "vitest run tests/integration/admin.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:watch": "playwright test --watch",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:auth": "playwright test tests/e2e/specs/01-auth.spec.ts",
    "test:e2e:tickets": "playwright test tests/e2e/specs/02-ticket-management.spec.ts",
    "test:e2e:admin": "playwright test tests/e2e/specs/03-admin-functions.spec.ts",
    "test:e2e:rbac": "playwright test tests/e2e/specs/04-role-based-access.spec.ts",
    "test:e2e:mobile": "playwright test tests/e2e/specs/05-mobile-accessibility.spec.ts --project=chromium-mobile",
    "test:e2e:errors": "playwright test tests/e2e/specs/06-error-handling.spec.ts",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chromium": "playwright test --project=chromium-desktop",
    "test:e2e:firefox": "playwright test --project=firefox-desktop",
    "test:e2e:mobile-chrome": "playwright test --project=chromium-mobile",
    "test:e2e:mobile-safari": "playwright test --project=iphone-mobile",
    "test:e2e:all": "playwright test --project=chromium-desktop --project=firefox-desktop --project=chromium-mobile",
    "test:a11y": "playwright test tests/a11y",
    "test:a11y:report": "playwright test tests/a11y --reporter=html && tsx scripts/generate-a11y-report.ts",
    "test:a11y:automated": "playwright test tests/a11y/automated.spec.ts",
    "test:a11y:keyboard": "playwright test tests/a11y/keyboard.spec.ts",
    "test:a11y:screen-reader": "playwright test tests/a11y/screen-reader.spec.ts",
    "test:a11y:contrast": "playwright test tests/a11y/color-contrast.spec.ts",
    "test:a11y:focus": "playwright test tests/a11y/focus.spec.ts",
    "test:a11y:mobile": "playwright test tests/a11y/mobile.spec.ts",
    "test:a11y:forms": "playwright test tests/a11y/forms.spec.ts",
    "test:security": "npm run test:security:unit && npm run security:scan",
    "test:security:unit": "vitest run tests/security",
    "test:security:owasp": "vitest run tests/security/owasp",
    "test:security:headers": "vitest run tests/security/headers.test.ts",
    "test:security:jwt": "vitest run tests/security/jwt.test.ts",
    "test:security:rate-limit": "vitest run tests/security/rate-limit.test.ts",
    "test:security:input": "vitest run tests/security/input-validation.test.ts",
    "security:scan": "bash scripts/security/run-security-scan.sh",
    "security:scan-full": "npm run security:scan && npm run test:security:owasp",
    "load:test": "k6 run tests/load/ticket-creation.js",
    "load:test:search": "k6 run tests/load/search-knowledge.js",
    "load:test:stress": "k6 run tests/load/api-stress-test.js",
    "load:test:all": "bash scripts/load-testing/run-all-load-tests.sh",
    "load:analyze": "node scripts/load-testing/analyze-results.js",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "build:analyze": "ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --view --output html --output-path ./reports/lighthouse.html",
    "lighthouse:ci": "lighthouse http://localhost:3000 --output json --output-path ./reports/lighthouse.json --chrome-flags=\"--headless\"",
    "lighthouse:autorun": "lhci autorun",
    "lighthouse:all": "npx tsx scripts/lighthouse-runner.ts",
    "lighthouse:validate": "bash scripts/lighthouse-ci-validation.sh",
    "perf:analyze": "npm run build:analyze && npm run lighthouse:ci",
    "perf:report": "node scripts/performance-report.js",
    "perf:validate": "npm run lighthouse:all && cat AGENT_24_LIGHTHOUSE_PERFORMANCE_REPORT.md",
    "check:health": "tsx scripts/check-production-health.ts",
    "check:health:prod": "tsx scripts/check-production-health.ts --url=$PRODUCTION_URL",
    "monitor:performance": "tsx scripts/monitor-performance.ts",
    "init-db": "tsx scripts/init-db.ts",
    "init-db:postgres": "DATABASE_URL=${DATABASE_URL:-postgresql://${POSTGRES_USER:-servicedesk}:${POSTGRES_PASSWORD:-dev_password}@localhost:${POSTGRES_PORT:-5432}/${POSTGRES_DB:-servicedesk_dev}?sslmode=disable} DB_TYPE=postgresql tsx scripts/init-db.ts",
    "db:postgres:up": "docker compose -f docker-compose.dev.yml up -d postgres",
    "db:postgres:down": "docker compose -f docker-compose.dev.yml stop postgres",
    "db:postgres:init": "DATABASE_URL=${DATABASE_URL:-postgresql://${POSTGRES_USER:-servicedesk}:${POSTGRES_PASSWORD:-dev_password}@localhost:${POSTGRES_PORT:-5432}/${POSTGRES_DB:-servicedesk_dev}?sslmode=disable} DB_TYPE=postgresql tsx scripts/init-db.ts",
    "test-db": "tsx scripts/test-db.ts",
    "db:seed": "tsx -e \"import { seedDatabase } from './lib/db'; seedDatabase();\"",
    "db:seed-dashboard": "tsx scripts/seed-dashboard-data.ts",
    "db:clear": "tsx -e \"import { clearDatabase } from './lib/db'; clearDatabase();\"",
    "db:benchmark": "tsx scripts/performance-benchmark.ts",
    "db:optimize": "tsx scripts/apply-performance-optimizations.ts",
    "db:monitor": "tsx scripts/monitor-queries.ts",
    "db:analyze": "tsx scripts/analyze-queries.ts",
    "migrate": "tsx lib/db/migrate.ts",
    "migrate:status": "tsx lib/db/migrate.ts status",
    "migrate:run": "tsx lib/db/migrate.ts migrate",
    "migrate:rollback": "tsx lib/db/migrate.ts rollback",
    "env:validate": "tsx scripts/validate-env.ts",
    "predev": "npm run env:validate",
    "prebuild": "npm run env:validate",
    "sentry:sourcemaps": "sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT .next",
    "sentry:sourcemaps:client": "sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT .next/static/chunks",
    "sentry:sourcemaps:server": "sentry-cli sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT .next/server",
    "sentry:release": "sentry-cli releases new $SENTRY_RELEASE && sentry-cli releases set-commits $SENTRY_RELEASE --auto && sentry-cli releases finalize $SENTRY_RELEASE",
    "sentry:deploy": "npm run build && npm run sentry:sourcemaps && npm run sentry:release",
    "postbuild": "node scripts/sentry-upload-sourcemaps.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
